                <div class="row">
                    <div class="col-sm-4">
                        <label>Nome</label>
                        <input class="form-control" type="text" value="<%=details.nome%>" name="nome">
                    </div>
                    <div class="col-sm-4">
                        <label>Sobrenome</label>
                        <input class="form-control" type="text" value="<%=details.sobrenome%>" name="sobrenome">
                    </div>
                    <div class="col-sm-4">
                        <label>Sexo</label>
                        <input class="form-control" type="text" value="<%=details.sexo%>" name="sexo">
                    </div>
                </div>
                </select>
                <br />
              <div> 
                <button class="btn btn-danger"> <a class="text-white" href="/show"> Todos registros</a></button>
                <button type="submit" class="btn btn-outline-danger"> Editar</button>
              </div>
            </form>
            <% }) %>
        </div>
    </div>
</body>

</html>