<!DOCTYPE html>
<html lang="pt-br">

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <meta charset="UTF-8">
    <title>CRUD em JS</title>
</head>

<body>
    <div class="container">
        <div class="col-md-8">
            <h1>Registros<h2>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Nome</td scope="col">
                                <th scope="col">Sobrenome</th'>
                                <th scope="col">Sexo</th>
                                <th scope="col">Opção</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(function(details) { %>
                            <tr>
                                <td><%= details.nome %></td>
                                <td><%= details.sobrenome %></td>
                                <td><%= details.sexo %></td>
                                <td>
                                    <div class="row">
                                        <a class="editar" href="/edit/<%=details._id%>">Editar</a> |
                                        <a href="/remove/<%=details._id%>">Remover</a>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>

        </div>
        <div style="text-align: right;"> 
            <button type="submit">
                <a class="text-white" href="/">Novo</a>
            </button></div>
    </div>

    <style>
        body {
            background-color: #E5E6F0;
        }

        tr {
            font-size: 1.5rem;
        }

        tbody:hover {
            background: #E5E6F0;
        }

        button {

            background-color: #8e4dff;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-bottom: 5px;
        }

        button:hover {
            background-color: #752bf5;
            border: 2px solid rgb(0, 0, 0);
            /* Green */
        }
    </style>

</body>

</html>